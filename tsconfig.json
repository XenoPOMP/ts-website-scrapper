{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "dist",
    "resolveJsonModule": true,
    "lib": ["es6", "dom"],
    "esModuleInterop": true,
    "declaration": true,
    "declarationDir": "dist",
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/"
  ],
  "exclude": [
    "!src/"
  ]
}